{% extends 'base.html.twig' %}

{% block title %}Mail
{% endblock %}

{% block body %}

	<div class="page-full bg-base-300">
		<div class=" w-9/12">
			<div class="card bg-base-100 w-full shadow-xl">
				<div class="card-body">
					<div class="card-title">
						<h1>{{ mail.email }}</h1>
					</div>
					<table class="table">
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ mail.id }}</td>
							</tr>
							<tr>
								<th>Email</th>
								<td>{{ mail.email }}</td>
							</tr>
							<tr>
								<th>Status</th>
								<td>{{ mail.status }}</td>
							</tr>
							<tr>
								<th>CreatedAt</th>
								<td>{{ mail.createdAt ? mail.createdAt|date('d/m/Y H:i:s') : '' }}</td>
							</tr>
							<tr>
								<th>UpdatedAt</th>
								<td>{{ mail.updatedAt ? mail.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
							</tr>
						</tbody>
					</table>
					<div class="card-actions justify-end">
						<a class="btn btn-primary btn-sm" href="{{ path('app_mail_index') }}">Voltar para lista</a>

						{# <a href="{{ path('app_mail_edit', {'id': mail.id}) }}">edit</a> #}
					</div>

				</div>
			</div>
		</div>
	</div>
